# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/notebooklm_rag
REDIS_URL=redis://localhost:6379/0

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id
NOTEBOOKLM_API_KEY=your-notebooklm-api-key

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
ENVIRONMENT=development
DEBUG=True
API_V1_STR=/api/v1
PROJECT_NAME=NotebookLM RAG System
VERSION=1.0.0

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Configuration
MAX_UPLOAD_SIZE=50000000  # 50MB
ALLOWED_FILE_TYPES=["pdf", "docx", "txt", "html"]
UPLOAD_DIRECTORY=./uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your-sentry-dsn-url
PROMETHEUS_ENABLED=true

# Email Configuration (for notifications)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Cache Configuration
CACHE_TTL=3600  # 1 hour
QUERY_CACHE_TTL=1800  # 30 minutes
